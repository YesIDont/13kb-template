{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "target": "es5",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "typedefs/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
